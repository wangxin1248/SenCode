<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.SensorDataActivity">
    <!--  传感器信息显示  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:background="#000000"
            android:layout_height="1dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.0"
                android:text="sensor name"/>
            <View
                android:layout_width="1dp"
                android:background="#000000"
                android:layout_height="match_parent"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:id="@+id/activity_sensor_text_view_name"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="#000000"
            android:layout_height="1dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.0"
                android:text="sensor type"/>
            <View
                android:layout_width="1dp"
                android:background="#000000"
                android:layout_height="match_parent"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:id="@+id/activity_sensor_text_view_type"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="#000000"
            android:layout_height="1dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.0"
                android:text="sensor power(mA)"/>
            <View
                android:layout_width="1dp"
                android:background="#000000"
                android:layout_height="match_parent"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:id="@+id/activity_sensor_text_view_power"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="#000000"
            android:layout_height="1dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.0"
                android:text="sensor description"/>
            <View
                android:layout_width="1dp"
                android:background="#000000"
                android:layout_height="match_parent"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:id="@+id/activity_sensor_text_view_string"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="#000000"
            android:layout_height="1dp"
            />
    </LinearLayout>
    <!--  传感器数据显示  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sensor data"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:background="#000000"
            android:layout_height="1dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/activity_sensor_text_view_data"/>
    </LinearLayout>
    <!--  传感器精度显示  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sensor accuracy"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:background="#000000"
            android:layout_height="1dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/activity_sensor_text_view_accu"/>
    </LinearLayout>
</LinearLayout>